{
    "name": "noodel",
    "version": "2.3.1",
    "license": "MIT",
    "scripts": {
        "test": "webpack-dev-server --env.test --open",
        "clean": "rimraf dist && rimraf typings",
        "build:css": "postcss ./src/styles --no-map -d ./dist && postcss ./src/styles/noodel.css --no-map -u cssnano -o ./dist/noodel.min.css && postcss ./src/styles/noodel-default.css --no-map -u cssnano -o ./dist/noodel-default.min.css",
        "build": "npm run clean && npm run build:css && webpack --env.prod"
    },
    "main": "dist/noodel.umd.js",
    "types": "typings/main/Noodel.d.ts",
    "files": [
        "dist",
        "src",
        "typings"
    ],
    "author": {
        "name": "Zuohao (Jonny) Lu"
    },
    "homepage": "https://github.com/zlu883/noodel-js",
    "description": "User interface for responsive, dynamic content trees",
    "dependencies": {
        "hammerjs": "^2.0.8",
        "vue": "^3.0.3"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/hammerjs": "^2.0.36",
        "@types/mocha": "^8.0.4",
        "@vue/compiler-sfc": "^3.0.3",
        "chai": "^4.2.0",
        "css-loader": "^4.3.0",
        "cssnano": "^4.1.10",
        "mini-css-extract-plugin": "^0.10.1",
        "mocha": "^8.2.1",
        "null-loader": "^4.0.1",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "postcss-cli": "^8.3.0",
        "rimraf": "^3.0.2",
        "style-loader": "^1.3.0",
        "terser-webpack-plugin": "^4.2.3",
        "ts-loader": "^8.0.11",
        "typescript": "~3.7.5",
        "vue-loader": "^16.1.0",
        "vue-template-compiler": "^2.6.12",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    }
}
